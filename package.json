{
  "name": "semimed-website",
  "version": "1.0.0",
  "description": "SEMIMED Rehabilitation Center website",
  "scripts": {
    "build": "npx tailwindcss -i ./src/input.css -o ./dist/output.css --minify",
    "watch": "npx tailwindcss -i ./src/input.css -o ./dist/output.css --watch",
    "serve": "npx live-server --port=3000 --no-browser",
    "dev": "concurrently \"npm run watch\" \"npm run serve\""
  },
  "devDependencies": {
    "concurrently": "^9.1.0",
    "live-server": "^1.2.2",
    "tailwindcss": "^3.4.0"
  }
}
